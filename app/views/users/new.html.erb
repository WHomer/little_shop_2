<div class="container">

  <% @user.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <%= form_for @user, url: register_path do |f| %>
  <h5>Contact Information</h5>
  <div >
    <div class="form-group row">
      <%= f.label :name, :class => "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control", autofocus: true  %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :email, :class => "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_field :email, :class => "form-control"  %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :password, :class => "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.password_field :password, :class => "form-control"  %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :confirm_password, :class => "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.password_field :confirm_password, :class => "form-control"  %>
      </div>
    </div>
  </div>

  <h5>Address Information</h5>

  <%= f.fields_for :user_addresses do |user_address| %>
      <div class="form-group row">
        <%= user_address.label :nickname, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= user_address.text_field :nickname, value: "Home", :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= user_address.label :street_address_1, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= user_address.text_field :street_address_1, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= user_address.label :street_address_2, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= user_address.text_field :street_address_2, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= user_address.label :city, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= user_address.text_field :city, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= user_address.label :state_province, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= user_address.text_field :state_province, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= user_address.label :zip_code, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= user_address.text_field :zip_code, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= user_address.label :phone_number, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= user_address.text_field :phone_number, :class => "form-control"  %>
        </div>
      </div>

  <% end %>
  <div class="form-group row">
    <div class="col-sm-12">
    <%= f.submit :class => "btn btn-primary btn-block" %>
    </div>
  </div>
  <% end %>

</div>