<div class="container">

  <% @user_address.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <%= form_for @user_address, url: profile_address_path do |f| %>
    <h5>Address Information</h5>
    <div >
      <div class="form-group row">
        <%= f.label :nickname, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :nickname, value: "Home", :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :street_address_1, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :street_address_1, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :street_address_2, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :street_address_2, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :city, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :city, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :state_province, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :state_province, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :zip_code, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :zip_code, :class => "form-control"  %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :phone_number, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :phone_number, :class => "form-control"  %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-12">
        <%= f.submit "Save Address", :class => "btn btn-primary btn-block" %>
        </div>
      </div>
  <% end %>

</div>